{
  "name": "@ksef/client",
  "version": "1.7.0",
  "description": "TypeScript client library for KSeF (Krajowy System e-Faktur) - Poland's national e-invoicing system",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./crypto": {
      "types": "./dist/utils/crypto.d.ts",
      "import": "./dist/utils/crypto.js",
      "require": "./dist/utils/crypto.cjs"
    },
    "./validation": {
      "types": "./dist/utils/validation.d.ts",
      "import": "./dist/utils/validation.js",
      "require": "./dist/utils/validation.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lkow/ksef-client-ts.git"
  },
  "bugs": {
    "url": "https://github.com/lkow/ksef-client-ts/issues"
  },
  "homepage": "https://github.com/lkow/ksef-client-ts#readme",
  "scripts": {
    "build": "tsup",
    "build:legacy": "tsc && tsc-alias",
    "build:analyze": "npm run build && npm run bundle:analyze",
    "bundle:analyze": "npx esbuild dist/index.js --bundle --metafile=meta.json --outfile=/dev/null && npx esbuild --analyze=verbose meta.json",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:unit": "vitest --exclude tests/integration.test.ts",
    "test:integration": "vitest tests/integration.test.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "xades:auth": "node scripts/xades-auth-flow.mjs",
    "xades:check": "node scripts/xades-sign-check.mjs",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [
    "ksef",
    "e-invoicing",
    "poland",
    "typescript",
    "api-client",
    "aws-lambda"
  ],
  "author": "Lukasz Kowalski",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "node-forge": "^1.3.1",
    "qrcode": "^1.5.3",
    "xml-crypto": "^6.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.19.2",
    "@types/node-forge": "^1.3.11",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.54.0",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.8",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
