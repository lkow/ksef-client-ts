{
  "name": "@ksef/client",
  "version": "1.0.0",
  "description": "TypeScript client library for KSeF (Krajowy System e-Faktur) - Poland's national e-invoicing system",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./crypto": {
      "types": "./dist/utils/crypto.d.ts",
      "import": "./dist/utils/crypto.js"
    },
    "./validation": {
      "types": "./dist/utils/validation.d.ts", 
      "import": "./dist/utils/validation.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:analyze": "npm run build && npm run bundle:analyze",
    "bundle:analyze": "npx esbuild dist/index.js --bundle --metafile=meta.json --outfile=/dev/null && npx esbuild --analyze=verbose meta.json",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:unit": "vitest --exclude tests/integration.test.ts",
    "test:integration": "vitest tests/integration.test.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "ksef",
    "e-invoicing",
    "poland",
    "typescript",
    "api-client",
    "aws-lambda"
  ],
  "author": "KSeF TypeScript Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.2",
    "@types/node-forge": "^1.3.11",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.54.0",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "aws-sdk": "^2.1000.0"
  },
  "peerDependenciesMeta": {
    "aws-sdk": {
      "optional": true
    }
  }
}
